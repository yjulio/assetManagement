# =====================================================
# Asset Management System - Environment Configuration
# =====================================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# ==================
# Flask Configuration
# ==================
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
# Generate a secure secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-a-secure-one

# ==================
# Database Configuration
# ==================
DB_HOST=localhost
DB_PORT=3306
DB_USER=user_asset
DB_PASSWORD=your-secure-database-password
DB_NAME=db_asset
DB_POOL_SIZE=10
DB_TIMEOUT=30

# ==================
# Session Configuration
# ==================
SESSION_LIFETIME=3600  # Session timeout in seconds (1 hour)
CSRF_TIME_LIMIT=3600  # CSRF token validity in seconds

# ==================
# Security Configuration
# ==================
# Enable rate limiting (recommended)
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=200 per hour
# Redis URL for rate limiting (use memory:// for development, redis://... for production)
REDIS_URL=memory://

# ==================
# Upload Configuration
# ==================
UPLOAD_FOLDER=/root/assetManagement/uploads
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes

# ==================
# Email Configuration
# ==================
EMAIL_ENABLED=false
EMAIL_SENDER=noreply@yourdomain.com
EMAIL_PASSWORD=your-email-password
EMAIL_RECIPIENT=admin@yourdomain.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ==================
# Backup Configuration
# ==================
BACKUP_DIR=/root/assetManagement/backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=false
AUTO_BACKUP_TIME=02:00
OPTIMIZE_ON_BACKUP=true
MAX_BACKUP_SIZE_MB=1000

# ==================
# Database Optimization
# ==================
ENABLE_QUERY_LOGGING=false
ENABLE_AUTO_OPTIMIZE=false

# ==================
# Production Settings
# ==================
# Set these to true only if using HTTPS in production
FORCE_HTTPS=false
WTF_CSRF_SSL_STRICT=false

# ==================
# Cloud Provider Examples
# ==================
# AWS RDS:
# DB_HOST=your-instance.region.rds.amazonaws.com
# DB_PORT=3306

# Azure MySQL:
# DB_HOST=your-server.mysql.database.azure.com
# DB_PORT=3306

# Google Cloud SQL:
# DB_HOST=/cloudsql/project:region:instance

# ==================
# Security Best Practices
# ==================
# 1. Generate strong SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# 2. Use long random passwords for DB_PASSWORD (min 16 characters)
# 3. For Gmail use App Passwords, not account password
# 4. Always set FLASK_DEBUG=false in production
# 5. Enable HTTPS and set FORCE_HTTPS=true in production
# 6. Use Redis for rate limiting in production
# 7. Regularly rotate SECRET_KEY and database passwords

